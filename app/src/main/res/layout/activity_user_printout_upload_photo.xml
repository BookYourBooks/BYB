<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_printout_upload_photo">
    <ImageView
        android:id="@+id/add_new_user_print_image"
        android:layout_marginTop="10dp"
        android:cropToPadding="false"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/addproduct"
        android:layout_width="350dp"
        android:layout_height="300dp"
        />
    <EditText
        android:id="@+id/new_user_photo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
        android:inputType="textMultiLine"
        android:layout_below="@+id/add_new_user_print_image"
        android:layout_marginTop="6dp"
        android:hint="Product Description"
        android:textColorHint="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/new_user_number_of_copies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textMultiLine"
        android:layout_below="@+id/new_user_photo_description"
        android:layout_marginTop="6dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
        android:hint="Number of Copies"
        android:textColorHint="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_new_photo_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/new_user_number_of_copies"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="155dp"
        android:layout_marginRight="155dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/custom_button"
        android:padding="17dp"
        android:text="Add Photo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>