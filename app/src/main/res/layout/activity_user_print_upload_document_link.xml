<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_print_upload_document_link">

    <EditText
        android:id="@+id/new_user_document_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="50dp"
        android:hint="Document Name"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColorHint="@color/black" />
    <EditText
        android:id="@+id/new_user_document_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_user_document_name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Document Description"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColorHint="@color/black" />


    <EditText
        android:id="@+id/new_user_number_of_copies_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textMultiLine"
        android:layout_below="@+id/new_user_document_description"
        android:layout_marginTop="6dp"
        android:hint="Number of Copies"
        android:textColorHint="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        />
    <Button
        android:id="@+id/update_document_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_user_number_of_copies_document"
        android:text="Update"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="17dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        />



</RelativeLayout>